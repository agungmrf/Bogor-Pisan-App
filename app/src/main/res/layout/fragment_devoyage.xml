<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".JavaWisata.Devoyage">

    <!-- TODO: Update blank fragment layout -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/abu"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/devoyage"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tools"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maisonneuebold"
                    android:text="Deskripsi"
                    android:textColor="@color/bk"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Satu lagi tempat rekreasi yang populer di kota Bogor. Devoyage Bogor, destinasi wisata yang mengusung konsep unik ini menawarkan taman layaknya pedesaan di Eropa. Lokasi ini sangat cocok bagi pengunjung yang ingin berfoto dengan latar belakang pedesaan Eropa nan cantik. Objek wisata ini berada di kompleks perumahan Bogor Nirwana Residence."
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Beragam spot foto berlatar belakang Eropa yang penuh warna dapat anda abadikan di Devoyage Bogor. Ambil foto sebanyak-banyaknya di lebih dari 150 spot foto, termasuk Eiffel Tower, kincir angin Belanda, kotak telepon merah khas London, dan gondola Venesia. Anda bisa dapat berfoto mengenakan pakaian tradisional khas Eropa dan mengabadikan cinta anda dengan gembok cinta di Pont des Arts!"
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Selain spot foto, Devoyage juga menawarkan wahana untuk anak-anak seperti House of Game, Playground Ferris Wheel, Kiddy Ride, Face and Body Painting, Arto Tato dan permainan lainnya. Harga tiket untuk permainan anak-anak berkisar antara IDR15.000 hingga IDR35.000."
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/maisonneuebold"
                    android:text="Lokasi dan Rute Menuju Devoyage Bogro"
                    android:textColor="@color/bk"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Lokasi Devoyage Bogor ini berada di Jalan Bulevard Bogor Nirwana Residence Mulyaharja Bogor Selata, Kota Bogor, Jawa barat 16152. Lokasi dari Devoyage Bogor ini cukup dekat dengan Kebun Raya Bogor, yakni berjarak sekitar 6 KM saja."
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Nah untuk rute menuju ke Devoyage Bogor ini juga cukup mudah, jika dari Kota Bogor langsung saja menuju ke arah Kebun Raya Bogor, setelah itu bakal ada papan petunjuk ke tempat wisata ini. Selain itu, jika kalian masih bingung, bisa langsung saja meminta bantuan Google Maps atau Waze dengan mengetik lokasi dari Devoyage Bogor."
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>