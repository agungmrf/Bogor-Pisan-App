<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fitsSystemWindows="true"
    tools:context=".JavaKuliner.SotoPakYusuf">

    <!-- TODO: Update blank fragment layout -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/abu"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yusuf"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tools"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maisonneuebold"
                    android:text="Deskripsi"
                    android:textColor="@color/bk"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Saat Anda liburan di Bogor atau sekedar jalan-jalan di Bogor, Soto Kuning khas Bogor tak boleh dilewatkan. Salah satunya adalah Soto Kuning Pak Yusup yang berlokasi di Jalan Suryakencana No.287, Bogor Tengah, Kota Bogor, Jawa Barat. Soto tersebut buka mulai pukul 14.00 hingga 19.30 WIB."
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Soto khas Bogor ini memang khas berwarna kuning dari kunyit dengan santan dan beragam rempah-rempah lainnya yang menimbulkan cita rasa yang ciamik. Tambahkan sambal, kecap manis dan jeruk nipis untuk menyempurnakan rasa soto kuning ini. Tak salah memang jika Soto Kuning ini menjadi salah satu kuliner andalan Kota Bogor."
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Sebagaimana layaknya soto, maka Anda diberikan pilihan untuk memilih aneka daging dan jeroan. Untuk daging tersedia daging khas dan daging campuran. Pilihan lainnya adalah babat, usus, paru, dan lain-lain. Harga perpotongnya dibandrol mulai 6ribu sampai 8ribu rupiah, biasanya yang di goreng sedikit lebih mahal."
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/maisonneuebook"
                    android:text="Saat disruput kuahnya, Anda akan merasakan kaya akan rempah dan bumbu. Rasanya asin gurih, dengan sentuhan pedas yang tipis. Belum lagi daging dan jerohan gorengnya yang cukup garing, biar lebih nikmat lagi tambahkan sambal, perasan jeruk nipis dan sedikit kecap manis. Sebagai teman makannya disediakan juga perkedel dan emping goreng."
                    android:textColor="@color/bk"
                    android:textSize="12dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>